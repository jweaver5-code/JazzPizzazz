@{
    ViewData["Title"] = "Merch";
}
<h1 class="text-center text-dark">@ViewData["Title"]</h1>

<div class="text-center mt-4">
    <h2 class="text-dark">Official Jazz’s Pizzazz Merch</h2>
    <p class="text-dark">Grab some tasty threads!</p>

    <div class="container">
        <div class="row justify-content-center">
            <!-- Shirt 1 -->
            <div class="col-md-6 mb-4">
                <div class="card border-0 shadow">
                    <img src="~/images/king.png" alt="T-shirt 1" class="card-img-top img-fluid" style="border-radius: 10px;">
                    <div class="card-body text-center">
                        <h5 class="card-title text-dark">$24.99</h5>
                    </div>
                </div>
            </div>

            <!-- Shirt 2 -->
            <div class="col-md-6 mb-4">
                <div class="card border-0 shadow">
                    <img src="~/images/bow.png" alt="T-shirt 2" class="card-img-top img-fluid" style="border-radius: 10px;">
                    <div class="card-body text-center">
                        <h5 class="card-title text-dark">$27.99</h5>
                    </div>
                </div>
            </div>

            <!-- Shirt 3 -->
            <div class="col-md-6 mb-4">
                <div class="card border-0 shadow">
                    <img src="~/images/Jazz.png" alt="T-shirt 3" class="card-img-top img-fluid" style="border-radius: 10px;">
                    <div class="card-body text-center">
                        <h5 class="card-title text-dark">$29.99</h5>
                    </div>
                </div>
            </div>

            <!-- Shirt 4 -->
            <div class="col-md-6 mb-4">
                <div class="card border-0 shadow">
                    <img src="~/images/trust.png" alt="T-shirt 4" class="card-img-top img-fluid" style="border-radius: 10px;">
                    <div class="card-body text-center">
                        <h5 class="card-title text-dark">$22.99</h5>
                    </div>
                </div>
            </div>
        </div>
    </div>
</div>
