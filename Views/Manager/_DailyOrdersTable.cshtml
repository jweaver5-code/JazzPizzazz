@model IEnumerable<JazzPizzazzApp.Models.Order>

@if (Model != null && Model.Any())
{
    <h2>Orders for @ViewBag.SelectedDate</h2>
    <table class="table">
        <thead>
            <tr>
                <th>Order ID</th>
                <th>Email</th>
                <th>Pizza</th>
                <th>Size</th>
                <th>Crust</th>
                <th>Status</th>
                <th>Date</th>
            </tr>
        </thead>
        <tbody>
            @foreach (var order in Model)
            {
                <tr>
                    <td>@order.OrderID</td>
                    <td>@order.Email</td>
                    <td>@order.Pizza</td>  <!-- Assuming PizzaName is a property in Order model -->
                    <td>@order.Size</td>
                    <td>@order.Crust</td>
                    <td>@order.Status</td>
                    @* <td>@order.Date.ToString("MM/dd/yy")</td>  <!-- Formatting the date --> *@
                </tr>
            }
        </tbody>
    </table>
}
else
{
    <p>No orders found for the selected date.</p>
}
