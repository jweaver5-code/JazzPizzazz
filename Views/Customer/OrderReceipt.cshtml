@model JazzPizzazzApp.Models.Receipt

<style>
    body {
        margin: 0;
        padding: 0;
        font-family: 'Courier New', Courier, monospace;
        background-color: #f5f5f5;
        position: relative;
        min-height: 100vh;
    }

    /* Pepperoni background */
    body::before {
        content: "";
        background-image: url('/images/pepperoni.jpg');
        background-size: cover;
        background-position: center;
        opacity: 0.25;
        position: fixed;
        top: 0;
        left: 0;
        height: 100%;
        width: 100%;
        z-index: -1;
    }

    .receipt-container {
        background-color: #ffffff;
        width: 500px;
        margin: 50px auto;
        padding: 30px 40px;
        border: 2px dashed #000;
        box-shadow: 4px 4px 20px rgba(0, 0, 0, 0.1);
        text-align: left;
        border-radius: 0;
    }

    h2 {
        text-align: center;
        font-size: 2.4rem;
        margin-bottom: 10px;
        color: #000;
        text-transform: uppercase;
    }

    .dash-line {
        text-align: center;
        font-size: 1.8rem;
        color: #000;
        margin: 10px 0 20px 0;
    }

    h3 {
        font-size: 1.8rem;
        margin-bottom: 20px;
        color: #000;
    }

    p {
        font-size: 1.5rem;
        margin: 12px 0;
        color: #000;
    }

    .total-cost {
        font-size: 1.8rem;
        color: #e82c4c;
        font-weight: bold;
        margin-top: 25px;
        border-top: 2px dashed #000;
        padding-top: 15px;
    }

    .button-container {
        text-align: center;
        margin-top: 30px;
    }

    .dashboard-button {
        background-color: #d16d7b;
        color: white;
        padding: 12px 25px;
        font-size: 1.2rem;
        border: none;
        border-radius: 8px;
        cursor: pointer;
        transition: background-color 0.3s ease;
        font-family: 'Courier New', Courier, monospace;
        text-decoration: none;
        display: inline-block;
    }

    .dashboard-button:hover {
        background-color: #b14e61;
    }
</style>

<div class="receipt-container">
    <h2>Order Receipt</h2>
    <div class="dash-line">-----------------------------</div>

    <h3>Your Receipt</h3>
    <p><strong>Pizza Name:</strong> @Model.PizzaName</p>
    <p><strong>Size:</strong> @Model.Size</p>
    <p><strong>Crust:</strong> @Model.Crust</p>
    <p class="total-cost"><strong>Total Cost:</strong> $@Model.TotalCost</p>
</div>

<div class="button-container">
    <a asp-controller="Customer" asp-action="Dashboard" class="dashboard-button">Back to Dashboard</a>
</div>